<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/inputranking"
    android:layout_width="340dp"
    android:layout_height="475dp"
    android:layout_gravity="center"
    android:background="#09D8F3"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/inputGameName"
        android:layout_width="165dp"
        android:layout_height="108dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="100dp"
        android:text="게임 이름"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold" />

    <android.widget.Button
        android:id="@+id/inputRankingI"
        android:layout_width="90sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|end"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/buttonshape2"
        android:fontFamily="sans-serif-medium"
        android:onClick="RankingInput"
        android:text="등록"
        android:textStyle="bold"
        android:textColor="#D8403E3E"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.146"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCapScore"
        app:layout_constraintVertical_bias="0.0" />

    <android.widget.Button
        android:id="@+id/inputRankingC"
        android:layout_width="90sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|start"
        android:layout_marginStart="50dp"
        android:layout_marginTop="300dp"
        android:background="@drawable/buttonshape2"
        android:fontFamily="sans-serif-medium"
        android:onClick="Cancel"
        android:text="취소"
        android:textStyle="bold"
        android:textColor="#D8403E3E"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.146"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCapScore"
        app:layout_constraintVertical_bias="0.0" />


    <ImageView
        android:id="@+id/inputRankingImg"
        android:layout_width="340dp"
        android:layout_height="126dp"
        android:layout_gravity="fill_horizontal|top"
        app:srcCompat="@drawable/ranking" />

    <EditText
        android:id="@+id/inputName"
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="220dp"
        android:layout_marginBottom="150dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="text"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/inputRankingScore"
        android:layout_width="217dp"
        android:layout_height="79dp"
        android:layout_gravity="center"
        android:layout_marginBottom="60dp"
        android:text="Score"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>